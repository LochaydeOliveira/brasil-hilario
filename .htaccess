# Habilitar o mod_rewrite
RewriteEngine On

# Definir o base do Rewrite
RewriteBase /

# Redirecionar HTTP para HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Remover www se presente
RewriteCond %{HTTP_HOST} ^www\.(.+)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Proteger diretórios sensíveis
Options -Indexes

# Permitir acesso direto aos arquivos de teste (DEVE VIR ANTES das regras genéricas)
<IfModule mod_rewrite.c>
    RewriteRule ^api/ - [L]
    RewriteRule ^anuncios\.php$ - [L]
    RewriteRule ^debug-api-cliques\.php$ - [L]
    RewriteRule ^teste-final-sistema\.php$ - [L]
    RewriteRule ^teste-simples\.php$ - [L]
    RewriteRule ^verificar-tabela\.php$ - [L]
    RewriteRule ^teste-api\.php$ - [L]
    RewriteRule ^corrigir-tabela\.php$ - [L]
    RewriteRule ^corrigir-tabela-sql\.php$ - [L]
    RewriteRule ^admin/teste-salvar\.php$ - [L]
    RewriteRule ^admin/debug-post\.php$ - [L]
    RewriteRule ^(config|includes|sql)/ - [F,L]
</IfModule>

# URLs Amigáveis
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^post/([a-zA-Z0-9-]+)/?$ post.php?slug=$1 [L,QSA]
RewriteRule ^categoria/([a-zA-Z0-9-]+)/?$ categoria.php?slug=$1 [L,QSA]
RewriteRule ^tag/([a-zA-Z0-9-]+)/?$ tag.php?slug=$1 [L,QSA]
RewriteRule ^busca/?$ busca.php [L,QSA]
RewriteRule ^sobre/?$ sobre.php [L,QSA]
RewriteRule ^contato/?$ contato.php [L,QSA]
RewriteRule ^privacidade/?$ privacidade.php [L,QSA]
RewriteRule ^termos/?$ termos.php [L,QSA]

# Regras para páginas (DEVE VIR POR ÚLTIMO)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([^/]+)/?$ pagina.php?slug=$1 [L,QSA]

# Compressão GZIP
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Cache de navegador
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>

# Headers de segurança
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Referrer-Policy "strict-origin-when-cross-origin"
    Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"
</IfModule>

# PHP settings
<IfModule mod_php7.c>
    php_value upload_max_filesize 5M
    php_value post_max_size 6M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Definir charset padrão
AddDefaultCharset UTF-8 

# Proteger arquivos sensíveis
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch> 